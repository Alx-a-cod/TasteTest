@model TasteTest.Models.ProdottiViewModel

@{
    ViewData["Title"] = "Gestione Prodotti";
    var isEditing = !string.IsNullOrEmpty(ViewBag.IsEditing);
}

@* <!-- Bootstrap + Select2 CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/css/select2.min.css" rel="stylesheet" />

<!-- jQuery + Bootstrap JS + Select2 -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/select2@4.0.13/dist/js/select2.min.js"></script> *@



<h4 class="mb-4">@(isEditing ? "Modifica Prodotto" : "Aggiungi Prodotto")</h4>

<form id="prodottoForm" method="post" asp-controller="Prodotti" asp-action="CreateorUpdate">
    <input type="hidden" asp-for="Prodotto.IDProdotto" />

    <div class="form-group">
        <label asp-for="Prodotto.Descrizione"></label>
        <input asp-for="Prodotto.Descrizione" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Prodotto.PrezzoUnitario"></label>
        <input asp-for="Prodotto.PrezzoUnitario" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Salva</button>
    <button type="reset" class="btn btn-secondary mt-3" id="resetForm">Annulla</button>
</form>

<hr />

<h4 class="mb-4">Riepilogo Prodotti</h4>

<div class="sirio-table-responsive">
    <table class="sirio-table sirio-table-dark" id="table-drawer">
        <thead>
            <tr>
                <th>Descrizione</th>
                <th>Prezzo Unitario</th>
                <th>Azioni</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var prodotto in Model.ListaProdotti)
            {
                <tr id="riga-prodotto-@prodotto.IDProdotto" data-id="@prodotto.IDProdotto">
                    <td>@prodotto.Descrizione</td>
                    <td>@String.Format("{0:N2} €", Convert.ToDecimal(prodotto.PrezzoUnitario))</td>
                    <td>
                        <button type="button" class="sirio-btn sirio-btn-warning p-2" title="Modifica">
                            <i class="fa-regular fa-pen-to-square fa-24" style="color: #567C8D;"></i>
                        </button>
                        <button type="button" class="sirio-btn sirio-btn-danger p-2" title="Elimina">
                            <i class="fa-solid fa-trash fa-24"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts {
    <script>
        function scrollToElement(el) {
            if (!el) return;
            el.scrollIntoView({ behavior: "smooth", block: "center" });
        }

        document.addEventListener("DOMContentLoaded", function () {

            // Scroll automatico sulla riga dopo submit
            const scrollId = sessionStorage.getItem("scrollToProdottoId");
            if (scrollId) {
                const el = document.getElementById("riga-prodotto-" + scrollId);
                if (el) scrollToElement(el);
                sessionStorage.removeItem("scrollToProdottoId");
            }

            // Validazione prezzo all'invio
            document.getElementById("prodottoForm").addEventListener("submit", function (e) {
                let prezzoInput = document.getElementById("Prodotto_PrezzoUnitario");
                let valoreOriginale = prezzoInput.value.trim();
                let pulito = valoreOriginale.replace(/\./g, "");
                let numeroValidazione = pulito.replace(",", ".");

                if (isNaN(numeroValidazione) || parseFloat(numeroValidazione) <= 0) {
                    e.preventDefault();
                    alert("Inserisci un prezzo valido maggiore di zero.");
                } else {
                    prezzoInput.value = pulito;
                    sessionStorage.setItem("scrollToProdottoId", document.getElementById("Prodotto_IDProdotto").value);
                }
            });

            // Pulsante "Modifica"
            document.querySelectorAll(".sirio-btn-warning").forEach(button => {
                button.addEventListener("click", function () {
                    let row = this.closest("tr");
                    let prodottoId = row.dataset.id;

                    document.getElementById("Prodotto_IDProdotto").value = prodottoId;
                    document.getElementById("Prodotto_Descrizione").value = row.cells[0].textContent.trim();

                    let prezzoText = row.cells[1].textContent.trim()
                        .replace(" €", "")
                        .replace(/\./g, "");

                    document.getElementById("Prodotto_PrezzoUnitario").value = prezzoText;
                    document.querySelector("h2").textContent = "Modifica Prodotto";

                    scrollToElement(document.getElementById("prodottoForm"));
                });
            });

            // Pulsante "Elimina"
            document.querySelectorAll(".sirio-btn-danger").forEach(button => {
                button.addEventListener("click", function () {
                    let row = this.closest("tr");
                    let prodottoId = row.dataset.id;

                    if (confirm("Sei sicuro di voler eliminare questo prodotto?")) {
                        fetch("/Prodotti/Delete", {
                            method: "POST",
                            headers: { "Content-Type": "application/json" },
                            body: JSON.stringify({ IDProdotto: parseInt(prodottoId) })
                        })
                        .then(response => {
                            if (!response.ok) throw new Error("Errore nell'eliminazione");
                            return response.text();
                        })
                        .then(() => {
                            alert("Prodotto eliminato con successo!");
                            row.remove();
                        })
                        .catch(err => alert(err.message));
                    }
                });
            });

            // Pulsante "Reset"
            document.getElementById("resetForm").addEventListener("click", function () {
                document.getElementById("prodottoForm").reset();
                document.getElementById("Prodotto_IDProdotto").value = "";
                document.querySelector("h2").textContent = "Aggiungi Prodotto";
            });

        });
    </script>
}
